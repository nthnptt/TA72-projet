.container.center-form-container
  %h1.form-title Sign up
  = form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: "myform"} do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email"
    .field
      = f.password_field :password, autocomplete: "new-password", placeholder: "Password (#{@minimum_password_length} characters minimum)"
    .field
      = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation"
    .field
      = f.text_field :username, placeholder: "Username"
    .field
      = f.text_field :phone_number, placeholder: "Phone number"
    .field
      = f.text_field :address, id: "address-input", placeholder: "Address"
    .field.two-col
      = f.text_field :city_code , id: "citycode-input", placeholder: "City code"
      = f.text_field :city, id: "city-input", placeholder: "City"
    .field
      = f.file_field :avatar, class: "input-file"

    .actions
      = f.submit "Sign up"
  .links-form
    = render "devise/shared/links"

= javascript_pack_tag 'auto-complete'

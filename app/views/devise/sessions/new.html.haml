.container.center-form-container
  %h1.form-title Log in
  = form_for resource, as: resource_name, url: session_path(resource_name), html: {class: "myform"}  do |f|
    .field
      = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: :mail
    .field
      = f.password_field :password, autocomplete: "current-password", placeholder: "Password (6 characters min.)"
    - if devise_mapping.rememberable?
      .field
        %p
          = f.check_box :remember_me
          = f.label :remember_me
    .actions
      = f.submit "Log in"
  .links-form
    = render "devise/shared/links"


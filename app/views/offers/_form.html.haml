= form_for @offer, html: {class: "myform"} do |f|
  %p
    = f.label :title
    %br
    = f.text_field :title

  %p
    = f.label :description
    %br
    = f.text_area :description

  %p
    = f.select :category_id, options_from_collection_for_select(@categories, :id, :name)

  %p
    = f.label :price
    %br
    = f.number_field :price, step: 0.01
  %p
    = f.file_field :images, multiple: true

  %p
    = f.submit
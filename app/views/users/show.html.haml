- if @user == current_user
  =link_to 'edit', '/users/edit', class: "btn btn-outline-success my-2 my-sm-0"

%h1
  = @user.username
%i
  Score:
  =@user.rate
%i
  = @user.email

%a{ href: "tel:#{@user.phone_number}" }

= image_tag(url_for(@user.avatar))

%h2 Add a comment:
= form_for [@user, Comment.new ] do |f|
  =f.hidden_field :commented_id, value: @user.id 
  %p
    = f.label :body
    %br/
    = f.text_field :body
  %p
    = f.label :rate
    %br/
    = f.number_field :rate
  %p
    = f.submit

%h2 Comments
- @user.comments.each do |comment|
  %p
    %strong body:
    = comment.body
  %p
    %strong Rate:
    = comment.rate
  - if comment.commenter != nil
    = comment.commenter.username